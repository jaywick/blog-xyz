{
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "silent",
    "args": [
        "run"
    ],
    "tasks": [
        {
            "taskName": "mongod"
        },
        {
            "taskName": "build",
            "isBuildCommand": true,
            "problemMatcher": {
                "owner": "npm",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.+\\.ts)\\((\\d+),(\\d+)\\)\\: (error) TS\\d+: (.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}