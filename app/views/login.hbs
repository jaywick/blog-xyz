<div id="container">
    <input id="username" type="text" placeholder="username" />
    <input id="passphrase" type="password" placeholder="passphrase" />
    <input id="redirect" type="hidden" value="{{redirect}}" />
    <a id="login-button" href="javascript:tryLogin()">login</a>
</div>

<script src="post.js"></script>
<script>
    function tryLogin() {
        document.body.style.cursor = "wait";
        document.body.querySelector("#passphrase").disabled = true;
        document.body.querySelector("#username").disabled = true;
        document.body.querySelector("#login-button").classList = ["disabled"];
        post('/login/authenticate', { username: '#username', passphrase: '#passphrase', redirect: '#redirect' });
        document.querySelector('#passphrase').value = "";
    }
</script>

<style>
    input {
        background: #e8e8e8;
        color: #232323;
        border: 1px solid #b1b1b1;
        padding: 6px 10px;
